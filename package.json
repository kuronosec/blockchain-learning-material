{
  "name": "blockchain-learning-material",
  "version": "1.0.0",
  "private": true,
  "description": "Simple Hardhat setup with a minimal Solidity contract for local/testnet experimentation.",
  "license": "MIT",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "setup": "yarn install",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "local:node": "hardhat node --hostname 127.0.0.1 --port 8545",
    "local:deploy": "hardhat run scripts/deploy.js --network localhost",
    "deploy": "hardhat run scripts/deploy.js --network localhost"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.1"
  }
}
